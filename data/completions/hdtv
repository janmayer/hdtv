_hdtv() 
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="--batch --execute --help --version --rebuild-usr --rebuild-sys"

    if [[ ${prev} == --batch ]] || [[ ${prev} == -b ]]; then
        _filedir
    elif [[ ${cur} == -* ]] ; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    fi
}
complete -F _hdtv hdtv
